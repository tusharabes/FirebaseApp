<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="80dp"
    android:layout_marginEnd="40dp"
    android:layout_marginStart="40dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:backgroundTint="@color/login_color"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add Task"
        android:textColor="@color/white"
        android:textSize="40sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/white"
        android:textStyle="italic|bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />
    <EditText
        android:text=""
        android:id="@+id/id_add_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Give Title"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:maxLength="20"
        android:layout_marginEnd="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/id_title_textCount"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/white"
        android:textStyle="italic|bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/id_desc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:hint="Give Description"
        android:gravity="start"
        android:maxLines="5"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/id_task_close"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Close"
            android:focusable="true"
            android:textColor="@color/login_color"
            android:background="@color/browser_actions_bg_grey"
            />
        <Button
            android:id="@+id/id_task_submit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@color/dark_login"
            android:textColor="@color/white"
            android:text="Submit"
            android:focusable="true"
            />
    </LinearLayout>
</LinearLayout>

</LinearLayout>